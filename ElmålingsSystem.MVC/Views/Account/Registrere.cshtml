@model ElmålingsSystem.MVC.Models.RegistrereViewModel
@using Microsoft.AspNetCore.Identity

@{
    ViewData["Title"] = "View";
    
}


<h1>Registrere</h1>

<h4>Registrere ny bruger</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Registrere">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="BrugerLogin" class="control-label"></label>
                <input asp-for="BrugerLogin" class="form-control" />
                <span asp-validation-for="BrugerLogin" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Password" class="control-label"></label>
                <input asp-for="Password" class="form-control" />
                <span asp-validation-for="Password" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="ConfirmPassword" class="control-label"></label>
                <input asp-for="ConfirmPassword" class="form-control" />
                <span asp-validation-for="ConfirmPassword" class="text-danger"></span>
            </div>
            <div class="form-group"> <label asp-for="Name"></label>
                <select asp-for="Name" class="form-control" asp-items='new SelectList(Model.Roller,"Id","Name")'></select><span asp-validation-for="Name" class="text-danger"></span></div>
            <div class="form-group">
                <input type="submit" value="Opret bruger" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>


<div>
    <a asp-action="Index">Back to List</a>
</div>


@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial").ConfigureAwait(false);}
}


